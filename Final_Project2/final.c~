while (comp == -1)
      {
        PORTC=~segd[i] ;
        PORTB=0x00;
        comp = 200;
        
      // Place your code here

      }


}
interrupt [TIM0_OVF] void timer0_ovf_isr(void)
{
// Reinitialize Timer 0 value
TCNT0=0x83;
count++;
// Place your code here
    if (count == comp){
        PORTB=0x01;
        count = 0;
        comp = -1;
        main();                                                                                                                        
    }
